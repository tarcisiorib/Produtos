@using Application.Extensions;
@model Application.ViewModels.FornecedorViewModel

@{
    ViewBag.Title = $"Deseja realmente excluir {Model.Nome}?";
}

<h2>@ViewBag.Title</h2>

<div>
    <h5>Esta ação será permanente!</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Documento)</dt>
        <dd class="col-sm-10">@this.FormatarDocumento(Model.TipoFornecedor, Model.Documento)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Ativo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ativo)</dd>
    </dl>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <input type="submit" value="Excluir" class="btn btn-danger" />
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-dark" })
    </div>
}

@Html.Partial("_DetalhesEndereco")