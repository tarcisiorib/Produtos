@model Application.ViewModels.FornecedorViewModel

@{
    ViewBag.Title = $"Editar fornecedor {Model.Nome}";
}

<h2>@ViewBag.Title</h2>

<hr />


@using (Html.BeginForm())
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="row mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label col-sm-1 text-end fw-bold" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Documento, htmlAttributes: new { @class = "col-form-label col-sm-1 text-end fw-bold" })
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Documento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.TipoFornecedor, htmlAttributes: new { @class = "col-form-label col-sm-1 text-end fw-bold" })
        <div class="col-sm-10">
            @Html.RadioButtonFor(model => model.TipoFornecedor, "1") Pessoa Física <br />
            @Html.RadioButtonFor(model => model.TipoFornecedor, "2") Pessoa Jurídica
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "col-form-label col-md-1 text-end fw-bold" })
        <div class="col-md-3">
            @Html.CheckBoxFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="offset-md-1 col-md-3">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a class="btn btn-dark" href="@Url.Action("Index", "Fornecedores")">Voltar</a>
        </div>
    </div>
}

<div id="myModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent" class="container-fluid"></div>
        </div>
    </div>
</div>

<div id="EnderecoTarget">
    @Html.Partial("_DetalhesEndereco")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            SetModal();
        });
    </script>
}
