@model Application.ViewModels.FornecedorViewModel

@{
    ViewBag.Title = "Novo Fornecedor";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm())
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control form-control-md" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Documento, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Documento, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.TipoFornecedor, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.RadioButtonFor(model => model.TipoFornecedor, "1", new { @checked = true }) Pessoa Física <br />
            @Html.RadioButtonFor(model => model.TipoFornecedor, "2") Pessoa Jurídica
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.CheckBoxFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <hr />
    @Html.Partial("_Endereco")
    <div class="form-group">
        <div class="offset-md-4 col-md-6">
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
            <a class="btn btn-dark" href="@Url.Action("Index", "Fornecedores")">Voltar</a>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        BuscaCep();
    </script>
}
