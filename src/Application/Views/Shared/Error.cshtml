@model Application.ViewModels.ErroViewModel
@{
    ViewBag.Title = "Ocorrreu um erro";
}

@{
    if (Model == null)
    {
        <div>
            <h2>Ocorreu um erro. Tente novamente, se o problema persistir entre em contato com nosso suporte.</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}

