@model Application.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = $"Produto {Model.Nome}";
}

<h2>@ViewBag.Title</h2>
<hr />
<div class="row mb-2">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 428px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>
            <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
            <dd>@Html.DisplayFor(model => model.Descricao)</dd>
            <dt>@Html.DisplayNameFor(model => model.Valor)</dt>
            <dd>@Model.Valor.ToString("C")</dd>
            <dt>@Html.DisplayNameFor(model => model.DataCadastro)</dt>
            <dd>@Html.DisplayFor(model => model.DataCadastro)</dd>
            <dt>@Html.DisplayNameFor(model => model.Ativo)</dt>
            <dd>@Html.DisplayFor(model => model.Ativo)</dd>
            <dt>@Html.DisplayNameFor(model => model.FornecedorId)</dt>
            <dd>@Html.DisplayFor(model => model.Fornecedor.Nome)</dd>
        </dl>
    </div>
</div>
<div class="offset-md-4">
    <a href="@Url.Action("Edit", "Produtos", new { id = Model.Id })" class="btn btn-primary">Editar</a>
    <a href="javascript:window.history.back();" class="btn btn-dark">Voltar</a>
</div>
