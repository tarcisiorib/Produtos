@model Application.ViewModels.ProdutoViewModel

@{
    ViewBag.Title = "Novo Produto";
}

<h2>@ViewBag.Title</h2>

<hr />

@using (Html.BeginForm("Create", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data", id = "produtoForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("_Alerts")

    <div class="row mb-3">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9 w-50">
            @Html.TextAreaFor(model => model.Descricao, 2, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.ImagemUpload, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            <div class="input-group">
                <input type="text" name="ImagemNome" id="ImagemNome" class="form-control" />
                <span class="input-group-btn">
                    <label class="btn btn-primary" for="ImagemUpload">
                        <input type="file" class="form-control" id="ImagemUpload" name="ImagemUpload" style="display: none;"
                               onchange="$('#ImagemNome').val(this.files[0].name); $('#ImagemNome').blur();" />
                        <i class="bi bi-cloud-arrow-up-fill"></i>
                    </label>
                </span>
            </div>

            @Html.ValidationMessage("ImagemNome", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            <div class="checkbox">
                @Html.EditorFor(model => model.Ativo)
                @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="row mb-3">
        @Html.LabelFor(model => model.FornecedorId, htmlAttributes: new { @class = "col-form-label col-md-3 text-end fw-bold" })
        <div class="col-md-9">
            @Html.DropDownListFor(model => model.FornecedorId, new SelectList(Model.Fornecedores, "Id", "Nome"), string.Empty, new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-md-3 col-md-6">
            <input type="submit" value="Cadastrar" class="btn btn-primary" />
            <a class="btn btn-dark" href="@Url.Action("Index", "Produtos")">Voltar</a>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#Valor").attr("data-val-number", "Moeda em formato inválido");
        $("#ImagemNome").attr("data-val", "true");
        $("#ImagemNome").attr("data-val-required", "Imagem obrigatória");
    </script>
}
